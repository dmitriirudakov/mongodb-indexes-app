{
	"env": {
        "browser": true,
		"node": true,
		"es6": true
    },
	"plugins": ["node"],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "rules": {
		"node/exports-style": ["error", "module.exports"],
		"no-console": "off",
		"no-unused-vars": "warn",
		"node/no-unsupported-features": "off"
	},
	"parserOptions": { 
		"ecmaVersion": 2018,
		"sourceType": "module",
		"ecmaFeatures": {
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	}, 
	"parser": "babel-eslint"
}